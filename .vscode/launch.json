  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serverless via NPM",
      "request": "launch",
      "runtimeArgs": ["run", "invoke"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node",
      "outFiles": ["${workspaceFolder}/.build/**/*.js"]
    },
    {
      "name": "Debug GraphQL Function",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/sls.cmd",
      "args": ["invoke", "local", "-f", "lambdaGraphqlFunction", "-p", ".lambda-event-data.json"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/.build/**/*.js"]
    }
  ]
}
