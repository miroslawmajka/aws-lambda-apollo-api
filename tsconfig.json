{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceRoot": "src",
    "outDir": ".build",
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "lib": [
      "es2015"
    ],
    "rootDir": "./",
    "sourceMap": true,
    "allowJs": true,
    "listEmittedFiles": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".serverless/**/*", ".vscode /**/*"]
}
