{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": ".build",
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "rootDir": "./",
    "sourceMap": true,
    "listEmittedFiles": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".serverless/**/*", ".vscode /**/*"]
}
